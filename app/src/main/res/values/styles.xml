<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextView1" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#0c4cb2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>

    </style>

    <style name="TextView2" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#233659</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="flagImage">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
</resources>
